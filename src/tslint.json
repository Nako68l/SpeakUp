{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "eofline": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "component-class-suffix": [true, "Component", "Page"]
    }
}
